#include <stdio.h>

int main(void)
{
    int time_max = 0, n = 0, time[7], a, b;
    for (int i = 0; i < 7; i++)
    {
        scanf("%d %d", &a, &b);
        time[i] = a + b;
        if (time[i] > 8)
        {
            if (time[i] > time_max)
            {
                time_max = time[i];
                n = i + 1;
            }
        }
    }
    printf("%d", n);

    return 0;
}
